# ============================================
# Impact Plus Backend - Environment Variables
# ============================================
# Copy this file to .env and update with your actual values
# Command: cp env.example .env

# ============================================
# Application Configuration
# ============================================
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:3000

# ============================================
# MongoDB Configuration
# ============================================
# MongoDB connection URI
# Format: mongodb://[username:password@]host[:port][/database][?options]
# Example: mongodb://localhost:27017/impact-plus
# Example with auth: mongodb://user:password@localhost:27017/impact-plus?authSource=admin
MONGODB_URI=mongodb://localhost:27017/impact-plus

# ============================================
# JWT Authentication Configuration
# ============================================
# Secret key for JWT token signing (use a strong random string in production)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# ============================================
# Redis Configuration
# ============================================
# Enable/disable Redis cache (set to 'true' to enable)
REDIS_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
# Redis password (leave empty if no password)
REDIS_PASSWORD=

# ============================================
# RabbitMQ Configuration
# ============================================
# RabbitMQ connection URL
# Format: amqp://[username:password@]host[:port][/vhost]
# Example: amqp://guest:guest@localhost:5672
# Example with vhost: amqp://user:pass@localhost:5672/my_vhost
# Default credentials from docker-compose: admin:admin
RABBITMQ_URL=amqp://admin:admin@localhost:5672

# RabbitMQ Email Queue Configuration
RABBITMQ_EMAIL_QUEUE=email_queue
RABBITMQ_EMAIL_DLQ=email_dead_letter_queue
RABBITMQ_EMAIL_EXCHANGE=email_exchange
RABBITMQ_EMAIL_ROUTING_KEY=email.send

# RabbitMQ Connection Options
RABBITMQ_HEARTBEAT=60
RABBITMQ_CONNECTION_TIMEOUT=30000
RABBITMQ_CHANNEL_MAX=0
RABBITMQ_FRAME_MAX=0

# RabbitMQ Retry Configuration
RABBITMQ_RETRY_ATTEMPTS=3
RABBITMQ_RETRY_DELAY=1000

# ============================================
# Rate Limiting / Throttling Configuration
# ============================================
# Throttle TTL in seconds (time window)
THROTTLE_TTL=60
# Maximum number of requests per TTL window
THROTTLE_LIMIT=10

# ============================================
# Email Configuration (Optional - for future use)
# ============================================
# SMTP Configuration
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@impactplus.com

# ============================================
# File Upload Configuration (Optional - for future use)
# ============================================
# Maximum file size in bytes (default: 10MB)
# MAX_FILE_SIZE=10485760
# Allowed file types
# ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# ============================================
# Logging Configuration (Optional)
# ============================================
# LOG_LEVEL=debug
# LOG_FILE=logs/app.log

# ============================================
# Production Specific (Uncomment for production)
# ============================================
# NODE_ENV=production
# FRONTEND_URL=https://yourdomain.com
# MONGODB_URI=mongodb://production-host:27017/impact-plus
# JWT_SECRET=your-production-secret-key-here
# REDIS_PASSWORD=your-redis-password-here

